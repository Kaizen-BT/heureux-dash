{
  "name": "@app/database",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "typecheck": "tsc --noEmit",
    "build": "npm run generate && tsc",
    "migrate": "npx drizzle-kit migrate",
    "generate": "npx drizzle-kit generate",
    "push": "npx drizzle-kit push",
    "pull": "npx drizzle-kit  pull"
  },
  "dependencies": {
    "better-sqlite3": "^12.5.0",
    "drizzle-orm": "^0.45.1",
    "drizzle-zod": "^0.8.3",
    "zod": "~4.3.5"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "drizzle-kit": "^0.31.8"
  },
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "require": "./dist/index.js"
    },
    "./queries": {
      "types": "./src/queries.ts",
      "import": "./src/queries.ts",
      "require": "./dist/queries.js"
    },
    "./types": {
      "types": "./src/zod-types.ts",
      "import": "./src/zod-types.ts",
      "require": "./dist/zod-types.js"
    }
  }
}
