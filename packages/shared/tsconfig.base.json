{
  "compilerOptions": {
    "rootDir": "${configDir}/src",
    "outDir": "${configDir}/dist",
    "allowSyntheticDefaultImports": true,
    "module": "nodenext",
    "target": "esnext",
    "sourceMap": false,
    "moduleResolution": "nodenext",
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "types": ["node"]
  }
}
